    {
      "path": "../infrastructure/data-validations"
    },
    {
      "path": "../infrastructure/logging"
    },
    {
      "path": "../infrastructure/queue"
    },
    {
      "path": "../infrastructure/relationaldb"
    },
    {
      "path": "../infrastructure/util"
    }
  ]
}
