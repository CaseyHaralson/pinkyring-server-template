{
  "name": "pinkyring",
  "private": true,
  "scripts": {
    "merge-check": "npm run lint && npm run prettier:check && npm run test:unit && npm run test:it",
    "build:clean": "npx rimraf ./packages/**/build && npx rimraf ./packages/**/tsconfig.tsbuildinfo",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "prettier": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "lint": "npx eslint . --report-unused-disable-directives --max-warnings=0",
    "test:unit": "npm run build && npx jest --config packages/tests/jest.config.unit.js",
    "test:unit:watch": "npx jest --config packages/tests/jest.config.unit.ts.js --watch",
    "test:it": "npm run build && npx jest --config packages/tests/jest.config.it.js",
    "prisma": "cd packages/infrastructure/repositories && npx prisma generate && npx prisma migrate deploy && cd ../../ && npm run test:it"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "dependencies": {
    "@pinkyring/apps_api-graphql": "*",
    "@pinkyring/apps_api-rest": "*",
    "@pinkyring/core": "*",
    "@pinkyring/di-container": "*",
    "@pinkyring/infrastructure_lambdas": "*",
    "@pinkyring/infrastructure_repositories": "*"
  },
  "devDependencies": {
    "@pinkyring/tests": "*",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "jest-mock-extended": "^3.0.1",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
