{
  "name": "pinkyring",
  "private": true,
  "scripts": {
    "build:clean": "npx rimraf ./packages/**/build/* && npx rimraf ./packages/**/tsconfig.tsbuildinfo",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "prettier": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "lint": "npx eslint . --report-unused-disable-directives --max-warnings=0",
    "test": "npm run build && npx jest packages/tests/build",
    "test:watch": "npx jest packages/tests/src --config jest.config.ts.js --watch"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@pinkyring/core": "*",
    "@pinkyring/di-container": "*",
    "@pinkyring/infra-implementations": "*",
    "@pinkyring/public-api": "*",
    "@pinkyring/tests": "*",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
